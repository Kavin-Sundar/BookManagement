</head>

<body>


    <div class="row">
        <div id="back">
            <button onclick="Back()">
                <i class="fas fa-arrow-left"></i>

            </button>
        </div>

        <div class="container" id="k1">

            <div id="k6">

                <h2 style="font-family: Lucida Console" , Courier New, monospace>Book Registration</h2>

            </div>

            <div class="container " id="k2">
                @using (Html.BeginForm("AddBook", "BookDetail", FormMethod.Post, new { @id = "form2", autocomplete = "off" }))
                {

                 

                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.BookId)
                    @Html.HiddenFor(model => model.ActionsList)
                    @Html.ValidationSummary()





                    <div class="form-group row">
                        @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control", name = "Title", placeholder = "  " } })
                        @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group row">
                        @Html.LabelFor(model => model.Author, htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.DropDownListFor(model => model.Author, Model.ActionsList, "Select Author", new { name = "Author", id = "k7" })

                    </div>

                    <div class="form-group row">
                        @Html.LabelFor(model => model.Price, htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control", name = "Price", placeholder = "  ", id = "k10" } })
                        @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
                    </div>


                    
                   



                    <div id="k9">
                        <input type="submit" value="Register" aria-pressed="false" class="btn btn-primary" id="k4" />
                    </div>
                }

            </div>

        </div>



    </div>

    <script>


        $(function () {

            space();
        });
        function space() {
            $("input[id='k10']").val("  ");
        };



        $.validator.addMethod("alphanumeric", function (value, element) {
            return this.optional(element) || /^\w+$/i.test(value);
        }, "Letters, numbers, and underscores only please");


        var $AddBook = $('#form2');

        debugger;


        if ($AddBook.length) {
            $AddBook.validate({
                
                rules: {
                    Title: {
                        required: true,
                        alphanumeric: true
                    },
                    Author: {
                        required: true
                    },
                    Price: {
                        required: true
                    }

                },
                messages:
                {
                    Title: {

                        required: 'Please enter Book Title !'
                    },
                    Author: {

                        required: 'Please enter Author Name!'

                    },
                    Price: {
                        required: 'Please enter a Book price'
                    }

                }
            });
        }
         function Back() {
            window.location.href = "@Url.Action("GetAllBooks", "BookDetail")?Id=" ;
           }

    </script>


</body>

</html>