        }

        #k7-error {
            position: absolute;
            margin-top: 55px;
            margin-left: 130px;
        }

        .error {
            color: red;
            font-style: normal;
            white-space: pre-line;
        }

        label {
            color: black;
            margin-top: 5px;
            font-weight: bold;
        }


        #k1 {
            margin-left: 450px;
            margin-top: 100px;
            color: grey;
            height: 500px;
            width: 700px;
            background-color: white;
        }

        #k2 {
            margin-left: 50px;
            margin-top: 20px;
        }


        input.form-control {
            width: 70%;
            padding: 12px;
            border: 1px solid #ccc;
