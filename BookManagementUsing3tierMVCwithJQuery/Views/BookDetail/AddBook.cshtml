            margin-left: 10px;
        }


        i {
            color: #30A3F1;
        }

            i:hover {
                color: red;
            }

        #k6 {
            color: #30A3F1;
            text-align: center;
            margin-left: -20px;
            margin-bottom: 50px;
            margin-top: 20px;
        }
       

        .form-group {
            margin-top: 30px;
        }


        body {
            background-image: url('/stock.jpg');
            background-blend-mode: luminosity;
            background-repeat: no-repeat;
            background-size: cover;
            margin: 0;
        }

        #back {
            margin-top: 10px;
            margin-left: 20px;
            padding: 10px;
        }
